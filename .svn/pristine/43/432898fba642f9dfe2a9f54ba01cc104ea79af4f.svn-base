        private void quitButton_Click(object sender, EventArgs e)
        {
            DialogResult res = MessageBox.Show("Quit?", "Exit", MessageBoxButtons.OKCancel, MessageBoxIcon.Exclamation);

            if (res.ToString() == "OK")
            { Application.Exit(); }
        }

